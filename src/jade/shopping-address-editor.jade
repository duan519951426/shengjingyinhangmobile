doctype html
html
    head
        meta(charset='utf-8')
        script(src='../js/dpr.js')
        title 收货地址编辑
        link(href='../css/shopping-address.css' rel='stylesheet')
    body
        form
            header.top-header.clearfix 添加新地址
                a.top-header-back(href='shopping-address.html')
                button(type='submit').edr-save 保存
            table.edr-table
                tr
                    th 收货人
                    td
                        input.edr-text(type='text')
                tr
                    th 联系电话
                    td
                        input.edr-text(type='text')
                tr
                    th 所在地区
                    td
                        select.edr-select#select-city3-provincial
                        select.edr-select#select-city3-city
                        select.edr-select#select-city3-counties
                tr
                    td.edr-x(colspan='2')
                        textarea.edr-textarea(placeholder='详细地址')
                tr
                    th 设置默认地址
                    td.text-r
                        input.edr-ckx(type='checkbox')
        script(src='../js/select-city/city.js')
        script(src='../js/select-city/select-city3.js')
