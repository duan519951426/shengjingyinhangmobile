doctype html
html
    head
        meta(charset='utf-8')
        script(src='../js/dpr.js')
        title 登录
        link(href='../css/login.css' rel='stylesheet')
    body
        header.top-header.clearfix 账户登录
            a.top-header-back(href='index.html')
            a.ln-help(href='help.html') 帮助
        form.lnform
            table.lnform-table
                tr
                    td 用户名
                    td
                        input.lnform-text(type='text' placeholder='手机号/用户名/邮箱')
                tr
                    td 密码
                    td
                        input.lnform-text(type='text' placeholder='请输入密码')
                tr
                    td 验证码
                    td.lnform-re
                        input.lnform-text.lnform-text-lb(type='text' placeholder='请输入验证码')
                        div.lnform-verificationCode
                            img(src='../img/_delete/code.jpg')
            input.lnform-button(type='submit' value='登录')
        div.ln-text.text-r
            a(href='#') 忘记密码
        a.mianfeizhuce(href='register.html') 免费注册

